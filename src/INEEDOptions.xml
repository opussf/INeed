			<Slider name="$parent_MaxBarSlider" inherits="UISliderTemplateWithLabels" minValue="1" maxValue="10" valueStep="1">
				<Size x="220" y="16"/>
				<Anchors>
					<Anchor point="LEFT" relativeTo="$parent_Title" relativePoint="LEFT"/>
					<Anchor point="TOP" relativeTo="$parent_PlaySound" relativePoint="BOTTOM">
						<Offset x="100" y="-15" />
					</Anchor>
				</Anchors>
				<!-- <ThumbTexture parentKey="Thumb" name="$parentThumb" file="Interface\Buttons\UI-SliderBar-Button-Horizontal">
					<Size x="32" y="32"/>
				 </ThumbTexture>
				 -->
				<Scripts>
					<OnLoad>
						_G[self:GetName().."Text"]:SetText( "Maximum Bars" );
						_G[self:GetName().."High"]:SetText( "10" );
						_G[self:GetName().."Low" ]:SetText( "1" );
					</OnLoad>
					<OnValueChanged>INEED.OptionsPanel_Slider_ValueChanged( self, "barCount" )</OnValueChanged>
				</Scripts>
			</Slider>

			<EditBox name="$parent_DisplayFor" inherits="NumericInputSpinnerTemplate" letters="4">
				<Anchors>
					<Anchor point="LEFT" relativeTo="$parent_Title" relativePoint="LEFT">
						<Offset x="50" y="-60"/>
					</Anchor>
					<Anchor point="TOP" relativeTo="$parent_MaxBarSlider" relativePoint="BOTTOM"/>
				</Anchors>
				<Scripts>
					<OnLoad>self.tooltip = "Number of seconds to show recently updated items"</OnLoad>
					<OnShow>INEED.OptionsPanel_EditBox_OnLoad( self, "displayUIListDisplaySeconds" )</OnShow>
					<OnTextChanged>INEED.OptionsPanel_EditBox_TextChanged( self, "displayUIListDisplaySeconds" )</OnTextChanged>
				</Scripts>
				<Layers>
					<Layer level="ARTWORK">
						<FontString name="$parent_DisplayForText" inherits="GameFontWhite" text="Seconds">
							<Anchors>
								<Anchor point="TOPLEFT">
									<Offset><AbsDimension x="60" y="-2"/></Offset>
								</Anchor>
							</Anchors>
						</FontString>
					</Layer>
				</Layers>
			</EditBox>
		</Frames>
		<Scripts>
			<OnLoad>
				INEED.OptionsPanel_OnLoad(self)
			</OnLoad>
		</Scripts>
	</Frame>
</Ui>